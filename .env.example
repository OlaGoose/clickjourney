# =============================================================================
# AI Provider (location-info API): auto | gemini | doubao | openai
# =============================================================================
NEXT_PUBLIC_AI_PROVIDER=auto

# =============================================================================
# Doubao (location-info, optional)
# =============================================================================
NEXT_DOUBAO_API_KEY=
NEXT_DOUBAO_CHAT_MODEL=doubao-seed-1-6-lite-251015
NEXT_DOUBAO_CHAT_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3/chat/completions

# =============================================================================
# Gemini (API key + model overrides per feature)
# =============================================================================
NEXT_PUBLIC_GEMINI_API_KEY=
# Default chat model (e.g. location-info API)
NEXT_PUBLIC_GEMINI_MODEL=gemini-2.5-flash
# STT /api/transcribe
NEXT_PUBLIC_GEMINI_MODEL_STT=gemini-2.5-flash
# /api/generate-cinematic-script
NEXT_PUBLIC_GEMINI_MODEL_CINEMATIC=gemini-3-flash-preview
# /api/generate-section (section block AI)
NEXT_PUBLIC_GEMINI_MODEL_SECTION=gemini-2.5-flash
# Client-side geminiCinematic: image gen / edit / analyze / TTS
NEXT_PUBLIC_GEMINI_MODEL_IMAGE=gemini-3-pro-image-preview
NEXT_PUBLIC_GEMINI_MODEL_IMAGE_EDIT=gemini-2.5-flash-image
NEXT_PUBLIC_GEMINI_MODEL_IMAGE_ANALYZE=gemini-3-pro-preview
NEXT_PUBLIC_GEMINI_MODEL_TTS=gemini-2.5-flash-preview-tts

# =============================================================================
# OpenAI (location-info, optional)
# =============================================================================
NEXT_PUBLIC_OPENAI_API_KEY=
NEXT_PUBLIC_OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Supabase (auth + DB sync; required for real login and sync)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Optional: server-side admin (e.g. bypass RLS)
SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# Google Maps (editor location picker, optional)
# =============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# =============================================================================
# Google Cloud Storage (optional; /api/upload-media when Supabase Storage not used)
# =============================================================================
GCS_BUCKET=
GCS_SERVICE_ACCOUNT_JSON=

# =============================================================================
# Auth / demo / dev flags
# =============================================================================
# Skip session check for API routes (testing only; remove or false in production)
SKIP_AUTH_FOR_API=

# Mock auth: test@orbit.local / test1234. Production should leave empty or false.
NEXT_PUBLIC_ENABLE_MOCK_AUTH=
# Allow mock auth on production (e.g. demo site)
NEXT_PUBLIC_ALLOW_MOCK_IN_PRODUCTION=

# Demo data for unauthenticated users (dev default on; production only for demo site)
NEXT_PUBLIC_ENABLE_DEMO_DATA=

# Optional: simple demo password protect
PASS_WORD=
